@import "../../template/loading/loading.wxss";

/*背景处理*/
.play-list-bg{
  background-repeat: no-repeat;
  background-size: cover;
  background-position: 50%;
  filter: blur(20px);
}
.play-list-bg, .play-list-bg::after {
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  z-index: 1;
  width: 100%;
  height: 420rpx;
}

.play-list-bg::after {
  content: '';
  background-color: rgba(0, 0, 0, 0.25);
}

/*内容*/
.main {
  position: absolute;
  z-index: 2;
  width: 100%;
}

.title_wrap{
  padding-top: 50rpx;
  display: flex;
  width: 98%;
  justify-content: space-around;
}

.photo{
  margin-left: 30rpx;
}

.photo image{
  width: 260rpx;
  height: 260rpx;
  border-radius: 10rpx;
}

.content{
  margin-left: 50rpx;
}

.content_title{
  font-size: 34rpx;
  font-weight: bolder;
  color: white;
  letter-spacing: 4rpx;
}

.content_info{
  display: flex;
  width: 100%;
  justify-content: flex-start;
  padding: 12rpx 0;
  margin-top: 20rpx;
}

.content_headPortrait image{
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
}

.content_nickname{
  margin-left: 20rpx;
  font-size: 30rpx;
  color: #f5f5f5;
  line-height: 50rpx;
}

.content_description{
  font-size: 25rpx;
  color: #ccc;
  overflow: hidden;
  text-overflow: ellipsis;
  line-height: 40rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.songList_wrap {
  overflow: hidden;
  background-color: white;
  border-radius: 25rpx 25rpx 0 0;
  margin-top: 80rpx;
}

.songList_wrap_title{
  padding: 40rpx 0;
  display: flex;
  justify-content: flex-start;
}

#play{
  padding-left: 40rpx;
}

.play2 {
  padding-left: 20rpx;
}

.play2 text{
  vertical-align:middle;
}

.songCount{
  margin-left: 10rpx;
  font-size: 30rpx;
  color: #ccc;
}

.songArray_wrap{
  width: 100%;
  display: flex;
  justify-content: space-between;
  padding: 20rpx 0;
}

.songArray_index{
  padding-left: 40rpx;
  color: #ccc;
  width: 10%;
  line-height: 70rpx;
}

.songArray_content{
  width: 65%;
}

.content_1 {
  font-size: 32rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}

.songArray_content font{
  font-size: 32rpx;
  color: #ccc;
}

.songArray_content .content_3{
  font-size: 25rpx;
  color: #ccc;
  margin-top: 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}

.songArray_mv {
  width: 10%;
}

#songArray_mv{
  width: 10%;
  line-height: 70rpx;
}

#songArray_other {
  width: 10%;
  line-height: 70rpx;
}