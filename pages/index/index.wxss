/* pages/index/index.wxss */
.search{
  width: 90%;
  height: auto;
  display: flex;
  align-items: center;
  margin:50rpx auto;
}

.search-input{
  display: flex;
  flex: 4;
  background-color: #ececec;
  justify-content: flex-start;
  align-items: center;
  padding: 10rpx 20rpx;
  border-radius: 25rpx;
}

.search-input input{
  width: 90%;
  height: 100%;
  font-size: 29rpx;
  margin-left: 20rpx;
}

.search button{
  align-items: center;
  margin-left: 15rpx;
}