/* pages/search/search.wxss */

/*搜索框*/
.search {
  width: 90%;
  height: auto;
  display: flex;
  align-items: center;
  margin: 50rpx auto 25rpx auto;
}

.search-input {
  display: flex;
  flex: 4;
  background-color: #ececec;
  justify-content: flex-start;
  align-items: center;
  padding: 10rpx 20rpx;
  border-radius: 25rpx;
}

.search-input input {
  width: 90%;
  height: 100%;
  font-size: 29rpx;
  margin-left: 20rpx;
}


/*搜索结果*/
swiper {
  width: 100%;
  /* height: 100vh; */
  height: calc(100vh - 168.5rpx);
  /* height: calc(100vh - 168.5rpx); */
  padding: 0;
}

.search_content {
  border-top: 1px solid #e2dcdc;
}

.songArray_wrap {
  width: 94%;
  display: flex;
  justify-content: flex-start;
  padding: 20rpx 0;
  border-bottom: 1px solid #e2dcdc;
  margin: 0rpx 25rpx;
}

.songArray_index {
  padding-left: 10rpx;
  color: #ccc;
  line-height: 70rpx;
  width: 10%;
}

.songArray_content {
  width: 80%;
}

.content_1 {
  font-size: 32rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}

.content_2 {
  font-size: 25rpx;
  color: rgb(190, 189, 189);
  margin-top: 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}

.songArray_mv {
  align-self: center;
  width: 10%;
}

#songArray_other {
  width: 10%;
  line-height: 70rpx;
}

